{
    "extends": "stylelint-config-recommended",
    "rules": {
        "max-empty-lines": [10, {
            "ignore": ["comments"]
        }],
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["include", "extend", "mixin", "font-smoothing", "function", "return", "if", "each", "warn", "else", "content", "while", "for"]
        }],
        "selector-pseudo-element-no-unknown": [
            true,
            {
              "ignorePseudoElements": ["v-deep"]
            }]
     }
}
